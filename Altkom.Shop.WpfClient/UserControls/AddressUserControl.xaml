<UserControl
    x:Class="Altkom.Shop.WpfClient.UserControls.AddressUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Altkom.Shop.WpfClient.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <Label>City</Label>
        <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" />

        <Label>Country</Label>
        <TextBox Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}" />

        <Label>Street</Label>
        <TextBox Text="{Binding Street, UpdateSourceTrigger=PropertyChanged}" />

        <Label>Zip Code</Label>
        <TextBox Text="{Binding ZipCode, UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>

</UserControl>
