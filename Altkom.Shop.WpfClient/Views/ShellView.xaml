<Window
    x:Class="Altkom.Shop.WpfClient.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Altkom.Shop.WpfClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="ShellView"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Window.Resources>

        <SolidColorBrush x:Key="MyBackgroundBrush" Color="DarkMagenta" />
        <SolidColorBrush x:Key="MyForegroundBrush" Color="White" />

        <sys:Double x:Key="ButtonHeight">70</sys:Double>
        <Thickness x:Key="MyMargin">5</Thickness>

        <Style x:Key="DefaultButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource MyBackgroundBrush}" />
            <Setter Property="Foreground" Value="{StaticResource MyForegroundBrush}" />
            <Setter Property="Height" Value="70" />
            <Setter Property="Margin" Value="5" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Background" Value="Green" />
        </Style>

    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Row="1">

            <Button Style="{StaticResource PrimaryButtonStyle}">
                Customers
            </Button>

            <Button Style="{StaticResource DefaultButtonStyle}">
                Products
            </Button>

            <Button Style="{StaticResource DefaultButtonStyle}">
                Services
            </Button>

            <Button Style="{StaticResource DefaultButtonStyle}">
                Orders
            </Button>

        </StackPanel>

        <StackPanel Background="Blue" />

        <StackPanel Grid.Column="1" Background="Blue" />


        <Frame
            Grid.Row="1"
            Grid.Column="1"
            Source="CustomersView.xaml" />



    </Grid>
</Window>
