<Window
    x:Class="Altkom.Shop.WpfClient.Views.LayoutControls.StackPanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Altkom.Shop.WpfClient.Views.LayoutControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StackPanelView"
    Width="900"
    Height="450"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal">

        <Button
            Width="250"
            Height="50"
            Margin="10"
            Background="Blue">
            Blue
        </Button>

        <Button
            Width="250"
            Height="50"
            Margin="10"
            Background="Green">
            Green
        </Button>


        <Button
            Width="250"
            Height="50"
            Margin="10"
            Background="Red">
            Red
        </Button>

        <Button
            Width="250"
            Height="50"
            Margin="10"
            Background="Red">
            Red
        </Button>

    </StackPanel>
</Window>
