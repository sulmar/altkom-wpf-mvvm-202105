<Window
    x:Class="Altkom.Shop.WpfClient.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Altkom.Shop.WpfClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="ShellView"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Window.Resources>
        <SolidColorBrush x:Key="MyBackgroundBrush" Color="DarkBlue" />
        <SolidColorBrush x:Key="MyForegroundBrush" Color="White" />

        <sys:Double x:Key="ButtonHeight">70</sys:Double>
        <Thickness x:Key="MyMargin">5</Thickness>

    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Row="1">

            <Button
                Height="{StaticResource ButtonHeight}"
                Margin="{StaticResource MyMargin}"
                Background="{StaticResource MyBackgroundBrush}"
                Foreground="{StaticResource MyForegroundBrush}">
                Customers
            </Button>

            <Button
                Height="{StaticResource ButtonHeight}"
                Margin="{StaticResource MyMargin}"
                Background="{StaticResource MyBackgroundBrush}"
                Foreground="{StaticResource MyForegroundBrush}">
                Products
            </Button>

            <Button
                Height="{StaticResource ButtonHeight}"
                Margin="{StaticResource MyMargin}"
                Background="{StaticResource MyBackgroundBrush}"
                Foreground="{StaticResource MyForegroundBrush}">
                Services
            </Button>

            <Button
                Height="{StaticResource ButtonHeight}"
                Margin="{StaticResource MyMargin}"
                Background="{StaticResource MyBackgroundBrush}"
                Foreground="{StaticResource MyForegroundBrush}">
                Orders
            </Button>

        </StackPanel>

        <StackPanel Background="Blue" />

        <StackPanel Grid.Column="1" Background="Blue" />


        <Frame
            Grid.Row="1"
            Grid.Column="1"
            Source="CustomersView.xaml" />



    </Grid>
</Window>
